{
  "name": "laggy",
  "version": "1.0.0",
  "description": "Simulate bad networks. Break your app before users do.",
  "author": "Raj Vishwakarma",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "laggy": "./bin/laggy.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hook": {
      "types": "./dist/hook.d.ts",
      "import": "./dist/hook.js",
      "require": "./dist/hook.cjs"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajvishwakarma1/laggy.git"
  },
  "bugs": {
    "url": "https://github.com/rajvishwakarma1/laggy/issues"
  },
  "homepage": "https://github.com/rajvishwakarma1/laggy#readme",
  "keywords": [
    "network",
    "chaos",
    "testing",
    "latency",
    "throttle",
    "mock",
    "cli",
    "test",
    "slow",
    "offline",
    "flaky"
  ]
}
